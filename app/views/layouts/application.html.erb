<!DOCTYPE html>
<html>
  <head>
    <title>InterviewProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="nav-scroller py-1 mb-2">
        <nav class="d-flex justify-content-between" id="navigate">
          <%= link_to 'create user wallet', new_wallet_path(wallet_type: 'user'), class: 'p-2 text-muted' %>
          <%= link_to 'create team wallet', new_wallet_path(wallet_type: 'team'), class: 'p-2 text-muted' %>
          <%= link_to 'create stock wallet', new_wallet_path(wallet_type: 'stock'), class: 'p-2 text-muted' %>
          <%= link_to 'wallet list', wallet_index_path, class: 'p-2 text-muted' %>
          <%= link_to 'send money', new_transaction_path, class: 'p-2 text-muted' %>
        </nav>
      </div>
      <div class="text-center">
        <%= yield %>
      </div>
    </div>

    <%#= link_to 'home', root_path %>

  </body>
</html>
